{
    "cmake.generator": "Unix Makefiles",  // Standardmäßig für Linux
    "C_Cpp.default.compilerPath": "${config:platformCompilerPath}",  // Platform-abhängiger Compiler-Pfad
    "C_Cpp.default.intelliSenseEngine": "Default",
    "C_Cpp.default.includePath": [
        "/usr/include/c++/9",  // Beispiel für Linux (kann angepasst werden)
        "/usr/include"
    ],
    "C_Cpp.default.defines": [
        "NDEBUG"
    ],
    "platformCompilerPath": {
        "linux": "/usr/bin/g++",  // Linux-Pfad
        "windows": "C:/MinGW/bin/g++.exe"  // Windows-Pfad für MinGW
    }
}
